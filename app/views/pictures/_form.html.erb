<%= form_for @picture do |f| %>
  <div class="field input-container">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="field input-container">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.submit 'ADD PICTURE', class: "button" %>
  </div>
<% end %>
