<div class="large-6 medium-12 small-12 columns small-centered user-info">
  <div class="row">
    <div class="large-12 columns">
      <h1><b><%= @user.username %></b></h1>
    </div>
    <div class="small-12 large-6 columns">
      current streak: <%= @user.current_streak %>
      <br />
    </div>
    <div class="small-12 large-6 columns">
      joined: <%= @user.pictures.first.created_at.month %> / <%= @user.pictures.first.created_at.day %>
      <br /><br />
    </div>
    <hr>
  </div>
</div>
<div class="row">
  <% @pictures.each_with_index do |picture, index| %>
    <a href="/pictures/<%=picture.id %>">
      <div class="small-12 medium-4 large-2 columns">
        <div class="index-image" style="background-image: url(<%= picture.image %>)">
        </div>
        <div class="image-info">
          <p>
            <b><%= picture.created_at.month %> / <%= picture.created_at.day %></b>
          </p>
        </div>
      </div>
    </a>
  <% end %>
</div>
